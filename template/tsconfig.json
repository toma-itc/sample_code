{
  "extends": "./tsconfig-node.json",
  "compilerOptions": {
    "declarationDir": "dist/types",
    "module": "esnext",
    "outDir": "dist",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "sourceMap": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "exclude": [
    "dist",
    "dist-web",
    "dist-node",
    "node_modules"
  ]
}
